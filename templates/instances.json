{{''' 
 select ?identifier (sample(?t) as ?thumbnail) (sample(?l) as ?label) (sample(?d) as ?description) where {
    ?identifier a ?type.
    optional {
        ?identifier foaf:depiction ?depiction.
    }
    optional {
        ?label rdfs:label ?l.
    }
    optional {
        ?identifier dc:description|skos:definition|rdfs:comment ?d.
    }
    filter (!isBlank(?identifier))
    optional {
        ?identifier a [ foaf:depiction ?type_thumbnail]
    }
    bind (coalesce(?depiction, ?type_thumbnail) as ?t)
} group by ?identifier order by ?label
''' | query(values={"type":this.identifier}) | tojson }}
